<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kitchen City - Register</title>
    <link rel="stylesheet" href="/public/register.css">
</head>
<body>
    <div class="container">
        <div class="logo">
            <!-- Place the logo here -->
            <img src="/images/logo.png" alt="Kitchen City Logo" id="logo">
        </div>
        <div class="form-container">
            <div class="form-toggle">
                <button id="login-tab" onclick="showLogin()">Login</button>
                <button id="register-tab" onclick="showRegister()">Register</button>
            </div>
            <div id="register-form" class="form">
                <h2>Register</h2>
                <form onsubmit="return validateEmail('register-email')">
                    <input type="text" placeholder="Username" required>
                    <input type="email" id="register-email" placeholder="Email (e.g., name@example.com)" required>
                    <input type="password" placeholder="Password" required>
                    <button type="submit">Register</button>
                    <p id="register-warning" class="warning"></p>
                </form>
            </div>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>


<script>
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById('passwordInput');
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }
</script>